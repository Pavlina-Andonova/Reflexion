<div id="{{id}}" class="single-member carousel-item{{#unless @index}} active{{/unless}}">
    <div class="member-image">
        <img src="{{image}}" alt="{{name}}"/>
    </div>
    <div class="container">
        <div class="member-information">
            <div class="instrument">{{instrument}}</div>
            <h2 class="title">{{name}}</h2>
            <p class="description text-justify">{{description}}</p>
            <ul class="social-media-container">
                <li class="d-inline">
                    <a class="circle-button" href="{{facebookLink}}">
                        <i class="fa fa-facebook" aria-hidden="true"></i>
                    </a>
                </li>
                <li class="d-inline">
                    <a class="circle-button" href="{{instagramLink}}">
                        <i class="fa fa-instagram" aria-hidden="true"></i>
                    </a>
                </li>
                <li class="d-inline">
                    <a class="circle-button" href="mailto:{{emailLink}}">
                        <i class="fa fa-envelope-o" aria-hidden="true"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="clearfix"></div>
</div>
